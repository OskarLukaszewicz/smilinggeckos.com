{% if app.request.attributes.all()['_controller'][1] == "detail" %}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>

    {# {{ dump(app.request.attributes.all()['_controller'][1]) }} #}
    

    {% for comment in entity.instance.comments %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.authorName }}</td>
            <td>{{ comment.content }}</td>
        </tr>
    {% endfor %}
</table>

{% else %}

<span class="badge badge-secondary">
    {{ entity.instance.comments|length }}
</span>

{% endif %}



        

            