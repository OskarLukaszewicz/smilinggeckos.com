<div>
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>Id</th>
            <th>Numer telefonu</th>
            <th>Email</th>
            <th>Wiadomość</th>
            <th>Gekony</th>
            <th>Data</th>
            <th>Rezerwacja</th>
        </tr>
        {% for reservation in reservations %}
            {% if reservation.accepted is same as(null) %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td> {{ reservation.phoneNumber }} </td>
                    <td> {{ reservation.email }} </td>
                    <td> {{ reservation.message }} </td>
                    <td>
                        <ul style="list-style-type:none;">
                            {% for geck in reservation.gecks %} 
                                <li>{{ geck }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td> {{ reservation.createdAt|date("d/m/Y h:m:s") }} </td>
                    <td class="d-grid gap-3">
                        <a href="{{ path('handle_reservation', {'id': reservation.id, 'action': "accept"}) }}">
                            <button type="button" class="btn btn-info w-100" >Akceptuj</button>
                        </a> 
                        
                        <a href="{{ path('handle_reservation', {'id': reservation.id, 'action': "decline"}) }}">
                            <button type="button" class="btn btn-danger w-100" >Odrzuć</button>
                        </a> 
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
