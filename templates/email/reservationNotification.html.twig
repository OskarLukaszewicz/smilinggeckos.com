{% extends "/email/reservationEmailBase.html.twig" %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block container %}
    <a href="{{ domain }}" target="_blank"><img class="logo" style="width: 60%;max-width: 12em;min-width: 7em;border-radius: 50%;display: block;margin-left: auto;margin-right: auto;" src="{{ domain }}/images/logo.jpg"  /></a>
        <h2>
            W serwisie zostało złożone nowe <a href="{{ domain }}/show_reservation/{{ reservation.uniqId }}" target="_blank"> zamówienie: </a>
        </h2>
        <div style="margin:7px">
        <p>
            <b>Nazwa użytkownika:</b> {{ reservation.username }}
        </p>
        <p>
            <b>Adres email:</b> {{ reservation.email }}
        </p>
        <p>
            <b>Treść wiadomości:</b> {{ reservation.message }}
        </p>
        <p>
            <b>Nr telefonu:</b> {{ reservation.phoneNumber }}
        </p>
        <p>
            <b>Data utworzenia:</b> {{ reservation.createdAt|date("d/m/Y h:m:s") }}
        </p>
        <p>
            Na liście zarezerwowanych gekonów znajdują się
        </p>
        <h3>Gekony:</h3>
        <ul class="reservationGecksList list-group">
            {% for gecko in reservation.gecks %}
                <li class="list-group-item"> {{ gecko }} </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block footer %}
{{ parent() }}
{% endblock %}